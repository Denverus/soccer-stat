<table class="table">
    <thead>
    <tr>
        <th>#</th>
        <th style ="word-break:break-all;">Player</th>
        <th style ="word-break:break-all;">W-D-L</th>
	    <% if (full_scorers) { %>
        <th style ="word-break:break-all;">Wins%</th>
        <th>GS</th>
        <th>GS/G</th>
        <th>GC</th>
        <th>GC/G</th>
        <th>GD</th>
	    <% } %>
        <th>Pts</th>
    </tr>
    </thead>
    <tbody>
    <% var max = 5; %>
    <% if (full_scorers || max > winners.length) { %>
    <% max = winners.length; %>
    <% } %>
    <% for(var i = 0; i < max; i++) { %>
    <tr>
        <th scope="row"><%= i + 1 %></th>
        <td><a href="/player/<%= winners[i].id %>/<%= currentYear %>"><%= winners[i].name %></a></td>
        <td><%= winners[i].wins %>-<%= winners[i].draws %>-<%= winners[i].losses %></td>
	    <% if (full_scorers) { %>
        <td><%= winners[i].winsPers %></td>
        <td><%= winners[i].team_scored %></td>
        <td><%= winners[i].team_scored_per_game %></td>
        <td><%= winners[i].team_conceded %></td>
        <td><%= winners[i].team_conceded_per_game %></td>

        <% var diff = winners[i].team_scored - winners[i].team_conceded; %>
        <td>
            <% if (diff > 0) { %>
            <span style="color: green"><%= '+'+diff %></span>
            <% } else if (diff < 0) { %>
            <span style="color: red"><%= diff %></span>
            <% } else  { %>
            <span style="color: blueviolet"><%= diff %></span>
            <% } %>
        </td>

	    <% } %>
        <td><%= winners[i].points %></td>
    </tr>
    <% } %>
    </tbody>
</table>