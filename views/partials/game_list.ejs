<ul class="list-group">

    <% var max = 5; %>
    <% if (full || max > games.length) { %>
    <% max = games.length; %>
    <% } %>

    <% for (var i = 0; i < max; i++) { %>
    <% var whiteScore = games[i].white.score; %>
    <% var colorScore = games[i].color.score; %>

    <% var whiteWon = whiteScore > colorScore; %>
    <% var colorWon = whiteScore < colorScore; %>

    <% var playersCount = games[i].playersCount; %>

    <li class="list-group-item">
        <span class="badge"><%= games[i].date %></span>
        <a href="/game/<%= games[i].year %>/<%= games[i].id %> ">
        <%if (whiteWon > 0) { %>
        <b>White</b>
        <% } else { %>
        White
        <% } %>
        -
        <%if (colorWon > 0) { %>
        <b>Color</b>
        <% } else { %>
        Color
        <% } %>
        <%= whiteScore %>:<%= colorScore %>
        </a>
        <% if (full) { %>
            <%if (playersCount != null) { %>
            <span class="glyphicon glyphicon-user" style="padding-left: 10px"><%= playersCount %></span>
            <% } %>
        <% } %>
    </li>
    <% } %>
</ul>