<ul class="list-group">

    <% for (var i = 0; i < games.length; i++) { %>
    <% var whiteScore = games[i].white.score; %>
    <% var colorScore = games[i].color.score; %>

    <% var whiteWon = whiteScore > colorScore; %>
    <% var colorWon = whiteScore < colorScore; %>

    <li class="list-group-item">
        <span class="badge"><%= games[i].date %></span>
        <a href="/game/<%= games[i].id %> ">
        <%if (whiteWon > 0) { %>
        <b>White</b>
        <% } else { %>
        White
        <% } %>
        -
        <%if (colorWon > 0) { %>
        <b>Color</b>
        <% } else { %>
        Color
        <% } %>
        <%= whiteScore %>:<%= colorScore %>
        </a>
    </li>
    <% } %>
</ul>